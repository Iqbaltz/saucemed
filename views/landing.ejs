<%- include('partials/header') %>

<%- include('partials/navbar') %>

<section class="hero mt-5">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">Welcome :)</h1>
          <p class="lead">This is my first Galllery app using mysql database.</p>
        </div>
      </div>
</section>

<section class="items">
    <div class="container">
      <div class="row justify-content-between">
        <% if(post){ %>
          <% for(i=0; i < post.length;i++){ %>
            <div class="item">
              <img src="<%=post[i].images%>" data-toggle="modal" data-target="#myModal<%=i%>" id="img" class="img-fluid" alt="...">
                <div class="detil">
                  <img src="<%=post[i].User.profile_pict%>" class="rounded-circle" alt="">
                  <p><%=post[i].User.username%></p>
                  <a href="/post/<%=post[i].id%>"><i class="fas fa-external-link-alt"></i></a>
                </div>
            </div>
            <div id="myModal<%=i%>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body">
                        <img src="<%=post[i].images%>" class="img-fluid">
                    </div>
                </div>
              </div>
            </div>
        <% } %>
        <% } %>
      </div>
    </div>
</section>

<%- include('partials/footer') %>