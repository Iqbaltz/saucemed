<%- include('../partials/header') %>


<div class="row justify-content-center mt-4 mb-4" id="body-edit-post">
<div class="col-10 col-md-6">
  <h4 class="text-center mt-4">Edit: <i><%= (post.name).slice(0,20) %></i> </h4>
  <form action="/post/<%= post.id %>?_method=PUT" method="POST">
    <div class="form-group">
      <div id="gallery" class="text-center">
        <img src="<%= post.images %>" alt="post images">
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="lbl">Captions</label>
      <textarea name="name" id="name" rows="5" class="form-control shadow-none" required><%= post.name %></textarea>
    </div>
    <button type="submit" class="lbl">Edit</button>
  </form>
</div>
</div>

<%- include('../partials/footer') %>