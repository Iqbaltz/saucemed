<%- include('../partials/header') %>


<div class="row justify-content-center mt-4 mb-4">
<div class="col-10 col-md-6">
  <h1 class="display-4 mt-5 text-center">Edit</h1>
  <h1 class="display-3 mb-3 text-center"><%= post.name %></h1>
  <form action="/post/<%= post.id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="image" class="lbl">Image URL</label>
      <input name="image" type="text" class="form-control shadow-none" placeholder="url..." id="image" value="<%= post.images %>" required>
    </div>
    <div class="form-group">
      <label for="name" class="lbl">Name</label>
      <input name="name" type="text" placeholder="title..." class="form-control shadow-none" id="name" value="<%= post.name %>" required>
    </div>
    <button type="submit" class="lbl">Edit</button>
  </form>
</div>
</div>
<%- include('../partials/footer') %>