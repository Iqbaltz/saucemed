<%- include('../partials/header') %>

<%- include('../partials/navbar') %>

<p class="display-4 text-center" style="margin-top: 100px;">Edit Profile Page</p>

<div class="row justify-content-center mt-5 mb-5" id="body-edit-profile">
    <div class="col-10 col-md-6">
      <form action="/profile/<%= user.id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="image" class="lbl">Profile Image URL</label>
              <input name="image" type="text" class="form-control shadow-none" placeholder="url..." id="image" value="<%= user.profile_pict %>" required>
            </div>
            <div class="form-group">
                <label for="fname">First Name</label>
                <input id="fname" class="form-control shadow-none" type="text" name="fname" value="<%= user.first_name %>">
            </div>
            <div class="form-group">
              <label for="fname">Last Name</label>
              <input id="lname" class="form-control shadow-none" type="text" name="lname" value="<%= user.last_name %>">
            </div>
            <input class="text-center btn btn-dark" type="submit">
        </form>
    </div>
</div>




<%- include('../partials/footer') %>