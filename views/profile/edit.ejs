<%- include('../partials/header') %>

<%- include('../partials/navbar') %>

<p class="display-4 text-center" style="margin-top: 100px;">Edit Profile Page</p>

<div class="row justify-content-center mt-5 mb-5" id="body-edit-profile">
    <div class="col-10 col-md-6">
      <form action="/profile/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="image" class="lbl">Profile Image</label>
              <div id="drop-area">
                <p>Upload Image</p>
                <input type="file" id="fileElem" name="image"  accept="image/png,image/jpeg" onchange="handleFiles(this.files)">
                <label class="button" for="fileElem">Select File</label>
              <progress id="progress-bar" max=100 value=0></progress>
              <div id="gallery" class="edit-prev">
                <img src="<%= user.profile_pict %>" alt="profilePict">
              </div>
            </div>
            </div>
            <div class="form-group">
                <label for="fname">First Name</label>
                <input id="fname" class="form-control shadow-none" type="text" name="fname" value="<%= user.first_name %>">
            </div>
            <div class="form-group">
              <label for="fname">Last Name</label>
              <input id="lname" class="form-control shadow-none" type="text" name="lname" value="<%= user.last_name %>">
            </div>
            <button type="submit" class="text-center lbl">Edit</button>
        </form>
    </div>
</div>


<script src="js/index.js"></script>


<%- include('../partials/footer') %>